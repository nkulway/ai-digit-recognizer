{
  "version": 2,
  "builds": [
    {
      "src": "applications/frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    },
    {
      "src": "applications/backend/src/server.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": "node_modules/@tensorflow/tfjs-node/**"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "applications/backend/src/server.ts"
    },
    {
      "src": "/(.*)",
      "dest": "applications/frontend/build/$1"
    }
  ]
}
